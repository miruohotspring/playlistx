{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@features/*": [
        "./src/app/_features/*"
      ],
      "@components/*": [
        "./src/app/_components/*"
      ],
      "@serverActions/*": [
        "./src/app/_serverActions/*"
      ],
      "@lib/*": [
        "./src/app/_lib/*"
      ],
      "@common/*": [
        "./src/app/_common/*"
      ],
      "@i18n/*": [
        "./src/app/i18n/*"
      ],
      "@public/*": [
        "./public/*"
      ],
    }
  },
  "include": [
    "./src",
    "./dist/types/**/*.ts",
    "./next-env.d.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
